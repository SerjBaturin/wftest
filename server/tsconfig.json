{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "removeComments": true,
        "baseUrl": "./",
        "paths": {
            "@config/*": ["./config/*"],
            "@/*": ["./src/*"]
        },
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}